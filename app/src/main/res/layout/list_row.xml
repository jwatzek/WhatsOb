<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp">

    <ImageView
        android:id="@+id/listItemNoteImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="12dp"
        android:src="@drawable/p" />

    <TextView
        android:id="@+id/listItemNoteTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_toEndOf="@+id/listItemNoteImg"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Note Title"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/listItemNoteText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/listItemNoteTitle"
        android:layout_toEndOf="@+id/listItemNoteImg"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="So this is how our note text should look, it's not pretty but I think it should do" />

</RelativeLayout>
